{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://verdantis/schemas/document_ingested.schema.json",
  "title": "DocumentIngested",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "event_id",
    "event_type",
    "occurred_at",
    "source",
    "version",
    "schema_ref",
    "content_hash",
    "idempotency_key",
    "payload"
  ],
  "properties": {
    "event_id": { "type": "string", "pattern": "^[0-9a-fA-F]{8}-[0-9a-fA-F]{4}-[1-5][0-9a-fA-F]{3}-[89abAB][0-9a-fA-F]{3}-[0-9a-fA-F]{12}$" },
    "event_type": { "type": "string", "enum": ["verdantis.DocumentIngested"] },
    "occurred_at": { "type": "string", "format": "date-time" },
    "source": { "type": "string", "minLength": 1 },
    "version": { "type": "string", "pattern": "^\\d+\\.\\d+\\.\\d+$" },
    "schema_ref": { "type": "string" },
    "trace_id": { "type": "string" },
    "content_hash": { "type": "string", "pattern": "^[a-f0-9]{64}$" },
    "idempotency_key": { "type": "string", "minLength": 8 },
    "payload": { "$ref": "#/definitions/Payload" }
  },
  "definitions": {
    "Payload": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "doc_id",
        "uri",
        "title",
        "lang",
        "checksum_sha256",
        "bytes",
        "mime_type",
        "indexed_at"
      ],
      "properties": {
        "doc_id": { "type": "string", "pattern": "^[0-9a-fA-F]{8}-[0-9a-fA-F]{4}-[1-5][0-9a-fA-F]{3}-[89abAB][0-9a-fA-F]{3}-[0-9a-fA-F]{12}$" },
        "uri": { "type": "string" },
        "title": { "type": "string" },
        "lang": { "type": "string", "minLength": 2, "maxLength": 12 },
        "checksum_sha256": { "type": "string", "pattern": "^[a-f0-9]{64}$" },
        "bytes": { "type": "integer", "minimum": 0 },
        "mime_type": { "type": "string" },
        "indexed_at": { "type": "string", "format": "date-time" },
        "metadata": { "type": "object" }
      }
    }
  }
}
