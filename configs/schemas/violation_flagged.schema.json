{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://verdantis/schemas/violation_flagged.schema.json",
  "title": "ViolationFlagged",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "event_id",
    "event_type",
    "occurred_at",
    "source",
    "version",
    "schema_ref",
    "content_hash",
    "idempotency_key",
    "payload"
  ],
  "properties": {
    "event_id": { "type": "string", "pattern": "^[0-9a-fA-F]{8}-[0-9a-fA-F]{4}-[1-5][0-9a-fA-F]{3}-[89abAB][0-9a-fA-F]{3}-[0-9a-fA-F]{12}$" },
    "event_type": { "type": "string", "enum": ["verdantis.ViolationFlagged"] },
    "occurred_at": { "type": "string", "format": "date-time" },
    "source": { "type": "string", "minLength": 1 },
    "version": { "type": "string", "pattern": "^\\d+\\.\\d+\\.\\d+$" },
    "schema_ref": { "type": "string" },
    "trace_id": { "type": "string" },
    "content_hash": { "type": "string", "pattern": "^[a-f0-9]{64}$" },
    "idempotency_key": { "type": "string", "minLength": 8 },
    "payload": { "$ref": "#/definitions/Payload" }
  },
  "definitions": {
    "Payload": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "violation_id",
        "policy_id",
        "subject_id",
        "severity",
        "description",
        "first_seen"
      ],
      "properties": {
        "violation_id": { "type": "string", "pattern": "^[0-9a-fA-F]{8}-[0-9a-fA-F]{4}-[1-5][0-9a-fA-F]{3}-[89abAB][0-9a-fA-F]{3}-[0-9a-fA-F]{12}$" },
        "policy_id": { "type": "string" },
        "subject_id": { "type": "string" },
        "severity": { "type": "string", "enum": ["LOW", "MEDIUM", "HIGH", "CRITICAL"] },
        "description": { "type": "string" },
        "evidence_uri": { "type": "string" },
        "detector": { "type": "string", "enum": ["rule", "model", "human"] },
        "score": { "type": "number", "minimum": 0, "maximum": 1 },
        "first_seen": { "type": "string", "format": "date-time" }
      }
    }
  }
}
